<p>
	<%= image_tag @venue.image(:large) %>

<h2>
	<%= @venue.name %>
</h2>

<%= simple_format @venue.address %>

<p>

		There is space for <%= pluralize @venue.capacity, "people" %>
	</p>

	<p>

		<%= @venue.price_in_pence %> pence
	</p>

	<% if @venue.user.present? %>
	<p>
		This venue was posted by <%= @venue.user.username %>
	</p>
	<% end %>


<% if logged_in? and current_user == @venue.user %>


	<p>

		<%= link_to "Edit this venue", edit_venue_path(@venue), class: "button" %>

		<%= link_to "Delete this venue", venue_path(@venue), method: :delete, 
		class: "button", confirm: "Are you sure?" %>
	</p>

<% else %>
	<p>
		<%= link_to "Book this venue", new_venue_order_path(@venue), class: "button" %>
	</p>
	
<% end %>

