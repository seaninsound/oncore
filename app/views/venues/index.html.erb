<h2>Venues Available</h2>

<% @venues.each do |venue| %>

	<div>
		<h3>
			<% if venue.image? %>
			<%= image_tag venue.image(:large) %>
			<% else %>

			<% end %>
			<%= link_to venue.name, venue_path(venue) %>
		<h3>
	</div>

	<% end %> 


	<p>
			<%= link_to "Add a new venue", new_venue_path, class: "button" %>
	</p>